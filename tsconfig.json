{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "declaration": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "esnext"
        ],
        "moduleResolution": "node",
        "skipLibCheck": true,
    },
    "include": [
        "./src",
        "./lib",
        "./tasks",
        "./deploy",
        "./typechain",
        "./files/*.json",
        "./hardhat.config.ts",
    ]
}